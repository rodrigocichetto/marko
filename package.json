{
  "name": "marko",
  "version": "1.1.0",
  "description": "Screen annotations made simple",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "author": {
    "name": "Rodrigo Cichetto",
    "email": "rodrigocichetto@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.marko.app",
    "productName": "Marko",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "icon": "icons/mac-512-512.icns",
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "extendInfo": {
        "NSAppleEventsUsageDescription": "Screen Annotator needs accessibility access for overlay functionality."
      }
    },
    "win": {
      "icon": "icons/windows-256-256.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "icons/linux-512-512.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}
